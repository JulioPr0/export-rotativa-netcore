@using RotativaDemo.Models
@model IEnumerable<StudentScore>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Julio Pramaitama</title>
</head>
<body>
    <h2>Laporan Data</h2>
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Nilai</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Rank</td>
                    <td>@item.Name</td>
                    <td>@item.Score</td>
                </tr>
            }
        } else
        {
            <tr>
                <td colspan="3" style="text-align:center;">Tidak ada data</td>
            </tr>
        }
        </tbody>
    </table>
</body>

<style>
    table { 
        width:100%; border-collapse: collapse; font-family: Arial, sans-serif; 
    }
    th, td { 
        border: 1px solid #333; padding: 5px; text-align: left; 
    }
    th { 
        background-color: #f0f0f0; 
    }
    
</style>

</html>
